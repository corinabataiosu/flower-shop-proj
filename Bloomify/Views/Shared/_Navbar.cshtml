@* Views/Shared/_Navbar.cshtml *@

@using Microsoft.AspNetCore.Identity
@inject UserManager<Bloomify.Models.BloomifyUser> UserManager
@inject SignInManager<Bloomify.Models.BloomifyUser> SignInManager

<header>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg px-3 shadow fixed-top">
        <!-- logo and title -->
        <div class="container-fluid">
            <h1 class="navbar-brand" style="cursor: pointer;">
                <a asp-controller="Home" asp-action="Index">    
                    <img src="~/images/logo.png" alt="Bloomify Logo" width="30" height="30" class="align-text-top">
                    Bloomify
                </a>
            </h1>

            <!-- collapsible navbar content -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Store" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About us</a>
                    </li>
                </ul>

                <!-- search form -->
                <form class="d-flex me-2 search-form" asp-controller="Products" asp-action="Search" method="get">
                    <input name="query" class="form-control me-2" type="search" placeholder="Search flowers..." aria-label="Search">
                    <button class="btn-search" type="submit"><i class="fas fa-search"></i></button>
                </form>


                <!-- icons on the right side -->
                <div class="nav-icons">
                    <a asp-controller="Wishlist" asp-action="Index" class="text-dark me-3 position-relative">
                        <i class="fas fa-heart"></i>
                    </a>
                    <a asp-controller="ShoppingCart" asp-action="Index" class="text-dark me-3 position-relative">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        if (user != null && !string.IsNullOrEmpty(user.ProfileImagePath))
                        {
                            <a asp-controller="Profile" asp-action="Index" class="text-dark me-2">
                                <img src="@user.ProfileImagePath" alt="Profile" style="width: 36px; height: 36px; object-fit: cover; border-radius: 50%; border: 2px solid #888;" />
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Profile" asp-action="Index" class="text-dark me-2">
                                <i class="fas fa-user-circle" style="font-size: 36px; color: #888;"></i>
                            </a>
                        }
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="text-dark me-2">
                            <i class="fas fa-user-circle" style="font-size: 36px; color: #888;"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

