@model List<Bloomify.Models.ShoppingCartItem>
@{
    ViewData["Title"] = "Shopping Cart";
    var total = Model.Sum(i => i.Price * i.Quantity);
}

<div class="container my-5">
    <h2 class="mb-4">Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <img src="~/images/emptycart.png" alt="Empty Cart" class="img-fluid mb-4" style="max-width: 200px;" />
            <h4 class="mb-3">Your shopping cart is empty</h4>
            <p class="text-muted mb-4">Looks like you haven't added anything to your cart yet.</p>
            <a href="@Url.Action("Index", "Store")" class="btn btn-lg">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th style="width: 16%">Image</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        <a href="@Url.Action("Product", "Store", new { id = item.Products?.ProductID })">
                                            <img src="@item.Products?.ImagePath" alt="@item.Products?.ProductName"
                                                 class="img-fluid rounded" style="max-width: 80px; max-height: 80px;" />
                                        </a>
                                    </td>
                                    <td class="align-middle">
                                        <a href="@Url.Action("Product", "Store", new { id = item.Products?.ProductID })"
                                           class="text-decoration-none text-dark fw-bold">
                                            @item.Products?.ProductName
                                        </a>
                                    </td>
                                    <td class="align-middle">
                                        <form method="post" asp-action="UpdateQuantity" class="d-flex align-items-center">
                                            <input type="hidden" name="itemId" value="@item.ShoppingCartItemID" />
                                            <button type="submit" name="action" value="decrease"
                                                    class="btn btn-sm btn-outline-secondary rounded-circle me-2"
                                                    style="width: 30px; height: 30px;">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <span class="mx-2 fw-bold">@item.Quantity</span>
                                            <button type="submit" name="action" value="increase"
                                                    class="btn btn-sm btn-outline-secondary rounded-circle ms-2"
                                                    style="width: 30px; height: 30px;">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td class="align-middle">$@item.Price.ToString("0.00")</td>
                                    <td class="align-middle fw-bold">$@((item.Price * item.Quantity).ToString("0.00"))</td>
                                    <td class="align-middle text-end">
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="itemId" value="@item.ShoppingCartItemID" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <form asp-action="ClearCart" method="post">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt me-2"></i> Empty Cart
                    </button>
                </form>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="mb-3">
                    <h4 class="d-inline-block me-3">Total:</h4>
                    <span class="fs-4 fw-bold">$@total.ToString("0.00")</span>
                </div>
                <form asp-action="Checkout" method="get">
                    <button type="submit" class="btn btn-lg">Proceed to Checkout</button>
                </form>
            </div>
        </div>
    }
</div>