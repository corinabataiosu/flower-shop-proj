@model Bloomify.Models.ShippingDetail
@{
    var user = ViewBag.User as Bloomify.Models.BloomifyUser;
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h2 class="mb-0">Checkout</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Checkout" method="post">
                        <div class="mb-4">
                            <label for="Address" class="form-label fw-bold">Shipping Address</label>
                            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required />
                        </div>

                        <div class="mb-4">
                            <label for="PostalCode" class="form-label fw-bold">Postal Code</label>
                            <input type="text" class="form-control" id="PostalCode" name="PostalCode" value="@Model.PostalCode" required />
                        </div>

                        <div class="form-check mb-4">
                            <input type="checkbox" class="form-check-input" id="useDefault" checked onchange="toggleDefaultData(this)">
                            <label class="form-check-label" for="useDefault">Use my account information</label>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-lg">Place Order</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleDefaultData(checkbox) {
            const isChecked = checkbox.checked;
            document.getElementById("Address").value = isChecked ? "@user?.Address" : "";
            document.getElementById("PostalCode").value = isChecked ? "000000" : "";
        }
    </script>
}