@model Bloomify.Models.BloomifyUser
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    <hr />
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                            {
                                <img src="@Model.ProfileImagePath" alt="Profile Image" style="width: 120px; height: 120px; object-fit: cover; border-radius: 50%; border: 2px solid #ccc;" />
                            }
                            else
                            {
                                <i class="bi bi-person-circle" style="font-size: 120px; color: #ccc;"></i>
                            }
                        </div>

                        <div class="form-group mb-3">
                            <label for="profileImage">Profile Image</label>
                            <input type="file" name="profileImage" class="form-control" accept="image/*" />
                            @if (ViewData.ModelState["profileImage"]?.Errors.Count > 0)
                            {
                                <span class="text-danger">@ViewData.ModelState["profileImage"].Errors[0].ErrorMessage</span>
                            }
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Full Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="control-label">Address</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-center gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <a asp-action="ChangePassword" class="btn btn-warning">Change Password</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 