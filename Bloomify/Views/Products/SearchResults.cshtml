@model IEnumerable<Bloomify.Models.Product>
@{
    ViewData["Title"] = "Search Results";
}

<div class="container mt-4">
    <h2 class="mb-4">Search Results</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No products found.</div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="product-card h-100">
                        <img src="~/@product.ImagePath" alt="@product.ProductName" class="product-image-card mb-3" />
                        <div class="product-details">
                            <h3>@product.ProductName</h3>
                            <p>@(product.ProductDescription.Length > 100 ? product.ProductDescription.Substring(0, 97) + "..." : product.ProductDescription)</p>
                            <div class="product-price fw-bold mb-3">@product.Price.ToString("C")</div>
                            <a asp-controller="Store" asp-action="Product" asp-route-id="@product.ProductID" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>