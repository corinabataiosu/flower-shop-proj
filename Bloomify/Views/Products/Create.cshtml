@model Bloomify.Models.Product

@{
    ViewData["Title"] = "Create";
    var defaultImage = Url.Content("~/images/default.jpg");
}

<h1>Create Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" id="imagePathInput" oninput="updateImagePreview()" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" class ="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProviderID" class="control-label"></label>
                <select asp-for="ProviderID" class ="form-control" asp-items="ViewBag.ProviderID"></select>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn" />
                <a asp-action="Index" class="btn">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-6 text-center">
        <img id="imagePreview" src="@defaultImage" alt="Preview" style="max-width: 100%; max-height: 300px; border-radius: 8px; border: 1px solid #ccc;" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function updateImagePreview() {
            const input = document.getElementById("imagePathInput");
            const preview = document.getElementById("imagePreview");
            const defaultImage = '@defaultImage';

            const path = input.value.trim();
            if (path) {
                preview.src = '/' + path.replace(/^~\//, '');
                preview.onerror = function () {
                    preview.src = defaultImage;
                };
            } else {
                preview.src = defaultImage;
            }
        }
    </script>
}
