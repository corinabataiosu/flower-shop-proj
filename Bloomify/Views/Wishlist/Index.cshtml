@model Bloomify.Models.Wishlist

@{
    ViewData["Title"] = "My Wishlist";
}

<div class="container my-5">
    <h2 class="mb-4">My Wishlist</h2>

    @if (Model == null || Model.WishlistItems == null || !Model.WishlistItems.Any())
    {
        <div class="text-center py-5">
            <h4 class="mb-3">Your wishlist is empty</h4>
            <p class="text-muted mb-4">Looks like you haven't added anything to your list yet.</p>
            <a href="@Url.Action("Index", "Store")" class="btn btn-lg">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
            @foreach (var item in Model.WishlistItems)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.Product?.ImagePath))
                        {
                            <img src="@item.Product.ImagePath" class="card-img-top" alt="@item.Product.ProductName"
                                style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted"><i class="fas fa-image fa-2x"></i></span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title text-truncate" title="@item.Product?.ProductName">@item.Product?.ProductName
                            </h5>
                            <p class="card-text text-primary fw-bold">$@item.Product?.Price</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                            <form asp-action="MoveToCart" method="post" class="d-inline">
                                <input type="hidden" name="itemId" value="@item.WishlistItemID" />
                                <button type="submit" class="btn btn-success btn-sm" title="Move to Cart">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </form>
                            <form asp-action="RemoveFromWishlist" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductID" />
                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Remove">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
