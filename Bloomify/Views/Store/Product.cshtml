@model Bloomify.Models.Product
@{
    var reviews = ViewData["Reviews"] as List<Bloomify.Models.Review>;
    ViewData["Title"] = Model.ProductName;
}

<div class="container my-5">
    <div class="product-details-container">
        <div class="product-image-container col-md-5 text-center">
            <img src="@Url.Content("~/" + Model.ImagePath)" alt="@Model.ProductName" class="product-image shadow-sm" />
        </div>
        <div class="product-info col-md-7">
            <h2 class="mb-3">@Model.ProductName</h2>
            <p class="product-price fw-bold fs-4">$@Model.Price.ToString("0.00")</p>

            <div class="product-description my-4">
                <h4>Description:</h4>
                <p>@Model.ProductDescription</p>
            </div>

            <hr class="my-4" />

            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="mb-4">
                <input type="hidden" name="productId" value="@Model.ProductID" />
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity:</label>
                    <input type="number" name="quantity" id="quantity" value="1" min="1" class="form-control" style="max-width: 100px;" />
                </div>
                <button type="submit" class="btn btn-lg">Add to Cart</button>
            </form>
        </div>
    </div>

    <hr class="my-5" />

    <div class="product-reviews">
        <h3 class="mb-4">Reviews:</h3>

        @if (reviews != null && reviews.Any())
        {
            <div class="row">
                @foreach (var review in reviews)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <h5 class="card-title mb-0">@review.Users?.Name</h5>
                                    <span class="badge bg-secondary">Rating: @review.Rating/5</span>
                                </div>
                                <p class="card-text">@review.Comment</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-light text-center p-4">
                <i class="fas fa-comment-slash fa-2x mb-3"></i>
                <p class="mb-0">This product doesn't have any reviews yet.</p>
            </div>
        }
    </div>
</div>